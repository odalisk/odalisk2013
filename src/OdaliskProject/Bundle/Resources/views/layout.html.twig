<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{% endblock %}</title>
    <meta name="description" content="">
    <meta name="viewport" width=800/>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/odalisk/css/style.css') }}" type="text/css" media="all" />        
    {% endblock %}

    {% block javascripts %}
    <script src="{{ asset('bundles/odalisk/js/libs/modernizr.js') }}"     type="text/javascript"></script>
    
    <script src="{{ asset('bundles/odalisk/js/libs/jquery.js') }}"        type="text/javascript"></script>
    
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-transition.js') }}" type="text/javascript"></script>
