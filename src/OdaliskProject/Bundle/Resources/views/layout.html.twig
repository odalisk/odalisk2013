    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-modal.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-tooltip.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-popover.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-tab.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-alert.js') }}"    type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-button.js') }}"   type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-collapse.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-dropdown.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/bootstrap-typeahead.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/bootstrap/script.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/odalisk/js/plugins.js') }}" type="text/javascript"></script>
    {% endblock %}
</head>

{% block page_name %}
<body data-spy="scroll">
{% endblock %}
