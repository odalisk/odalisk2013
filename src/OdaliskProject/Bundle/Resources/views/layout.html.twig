{% if maintenance_status == true %}
      <div id="maintenance_mode">
          <div id="center_block">
              {% image '@OdaliskBundle/Resources/public/img/odalisk-logo.png' output='/images/logo.png'
              %}
              <img id="logo" src="{{ asset_url }}"/>
              {% endimage %}

              <h2>Coming soon</h2>
          </div>
      </div>
      <a href="http://github.com/odalisk/odalisk2013">
      {% image '@OdaliskBundle/Resources/public/img/forkme_right_darkblue.png' output='/images/forkme.png'
        %}
        <img style="position: fixed; bottom: 0; right: 0; border: 0;" src="{{ asset_url }}" alt="Fork me on GitHub">
      {% endimage %}
      </a>
{% else %}
    {% block page %}
        {% block navbar %}

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand blue-font" href="{{ path('homepage') }}">Odalisk</a> <span class="label label-beta label-info">beta</span>
                    <div class="nav-collapse pull-right">
                        <ul class="nav">
                            {% block menu %}

                            {% endblock %}
                        </ul>
                        {% block userinfos %}
                        <!--<p class="navbar-text pull-right">Logged in as <a href="#">username</a></p>-->
                        {% endblock %}
                    </div><!--/.nav-collapse -->
                </div>
            </div>

        </div>
        {% endblock %}

        <div class="container-fluid">
            <div class="row-fluid row-nomargin-top">
                <div class="span12">
                    {% block content %}

                    {% endblock %}
                    <div class="container">
                        <hr>

                        <footer>
                            <p>&copy; Polytech Nantes 2013 - <a onclick="$('#contactModal').modal()">Contact Us !</a></p>
                            
                        </footer>
                    </div>
                </div>
            </div>


        </div><!--/.fluid-container-->

    {% endblock %}
    <a href="http://github.com/odalisk/odalisk2013">
    {% image '@OdaliskBundle/Resources/public/img/forkme_right_darkblue.png' output='/images/forkme.png'
      %}
      <img style="position: fixed; bottom: 0; right: 0; border: 0;" src="{{ asset_url }}" alt="Fork me on GitHub">
    {% endimage %}
    </a>
{% endif %}


